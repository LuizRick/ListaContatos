@model Contatos.Models.Contato
@{
    ViewBag.Title = "Criar novo contato";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            @if(ViewBag.ErrorMsg != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMsg
                </div>
            }
        </div>
        <div class="col-lg-5">
            <fieldset>
                <legend>Novo contato</legend>
                @using (Html.BeginForm("Create", "Contatos", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="nome">Nome Completo:</label>
                        @Html.TextBoxFor(m => m.Nome, new { id = "nome", maxlength = "255" , @class="form-control" })
                        <p class="help-block">Maximo de 255 caracteres</p>
                        <span class='alert alert-danger hide'>Nome parece estar vazio</span>
                    </div>
                    <div class="form-group">
                        <label for="birthdate">Data de Nascimento</label>
                        @Html.TextBoxFor(m => m.BirthDate, String.Format("{0:d}", DateTime.Now.ToShortDateString()), new { id = "birthdate", type = "date" , @class="form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                }
            </fieldset>
        </div>
    </div>
</div>
