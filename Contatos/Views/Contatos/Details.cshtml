@model Contatos.Models.Contato
@using Contatos.Helpers
@{
    ViewBag.Title = "Details/Editar - Contato";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-5">
            <fieldset>
                <legend>Detalhes/Modificar - Contatos</legend>
                @using (Html.BeginForm("Edit", "Contatos", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="nome">Nome Completo:</label>
                        @Html.TextBoxFor(m => m.Nome, new { id = "nome", maxlength = "255", @class = "form-control" })
                        <p class="help-block">Maximo de 255 caracteres</p>
                        <span class='alert alert-danger hide'>Nome parece estar vazio</span>
                    </div>
                    <div class="form-group">
                        <label for="birthdate">Data de Nascimento</label>
                        @Html.TextBoxFor(m => m.BirthDate, "{0:yyyy-MM-dd}", new { id = "birthdate", type = "date", @class = "form-control" })
                    </div>
                    @Html.HiddenFor(m => m.Id)
                    <button type="submit" class="btn btn-primary">Salvar</button>
                }
            </fieldset>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <fieldset>
                <legend>Telefones</legend>
                <a href="@Url.Action("Create", "ContatoTelefone" , new { id = Model.Id })">Novo telefone</a>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Numero</th>
                            <th>Tipo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            for (int i = 0; i < Model.Telefones.Count; i++)
                            {
                                <tr>
                                    <td></td>
                                    <td>@Model.Telefones[i].Numero</td>
                                    <td>@EnumExtensions.TelefoneTypeName(Model.Telefones[i].Tipo)</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </fieldset>
        </div>
        <div class="col-lg-12">
            <fieldset>
                <legend>Email</legend>
                <a href="@Url.Action("Create","ContatoEmail", new { id = Model.Id})">Novo Email</a>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Endereco</th>
                            <th>Tipo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            for (int i = 0; i < Model.Emails.Count; i++)
                            {
                                <tr>
                                    <td></td>
                                    <td>@Model.Emails[i].Endereco</td>
                                    <td>@EnumExtensions.EmailTypeName(Model.Emails[i].Tipo)</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </fieldset>
        </div>
    </div>
</div>


