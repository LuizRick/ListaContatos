@model Contatos.Models.Email
@{
    ViewBag.Title = "Novo Contato-Email";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <fieldset>
                <legend>Novo Email</legend>
                @using (Html.BeginForm("Create", "ContatoEmail", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="email">Email:</label>
                        @Html.TextBoxFor(m => m.Endereco, new { id = "email", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="tipo">tipo:</label>
                        @Html.EnumDropDownListFor(m => m.Tipo, new { id = "tipo", @class = "form-control" })
                    </div>
                    @Html.HiddenFor(m => m.Contato.Id)
                    <button type="submit" class="btn btn-primary">Salvar</button>
                }
            </fieldset>
        </div>
    </div>
</div>